<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardElevation="8dp"
    app:cardCornerRadius="6dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgProductJsonParsing"
            android:layout_width="225dp"
            android:layout_height="225dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/chicken"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvProductNameJsonParsing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chicken"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginHorizontal="5dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/imgProductJsonParsing"
            app:layout_constraintStart_toStartOf="@id/imgProductJsonParsing"
            app:layout_constraintEnd_toEndOf="@id/imgProductJsonParsing"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvProductPriceJsonParsing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Price: 40"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/tvProductNameJsonParsing"
            app:layout_constraintStart_toStartOf="@id/tvProductNameJsonParsing"
            app:layout_constraintEnd_toEndOf="@id/tvProductNameJsonParsing"/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvProductTypeJsonParsing"
            android:text="Product Type :- non vegetable"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@id/tvProductPriceJsonParsing"
            app:layout_constraintEnd_toEndOf="@id/tvProductPriceJsonParsing"
            app:layout_constraintTop_toBottomOf="@id/tvProductPriceJsonParsing"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgProductRatingJsonParsing"
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:src="@drawable/ic_baseline_star_rate_24"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginVertical="10dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvProductRatingJsonParsing"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="4"
            android:textSize="15sp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="9dp"
            android:textColor="@color/black"
            app:layout_constraintEnd_toStartOf="@id/imgProductRatingJsonParsing"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvProductQuantityJsonParsing"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/_500gm"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/black"
            android:layout_margin="10dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>